{
  "name": "behavior3-chief",
  "private": true,
  "version": "0.7.1",
  "description": "Manage and run behavior trees for your subjects in your game",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/BlackDice/b3-chief.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "node build",
    "start": "ava --watch",
    "test": "ava",
    "lint": "eslint src test",
    "lintFix": "npm run lint -- --fix",
    "ci": "npm run lint && npm test && npm run build",
    "coverage": "nyc ava & nyc report --reporter=html",
    "release": "npm run lint && npm run test && npm run build && npm publish dist",
    "coveralls": "nyc ava && nyc report --reporter=text-lcov | coveralls",
    "publish-please": "publish-please",
    "prepublish": "publish-please guard"
  },
  "bugs": {
    "url": "https://github.com/BlackDice/b3-chief/issues"
  },
  "author": {
    "name": "Daniel K.",
    "email": "fredy.c@seznam.cz"
  },
  "dependencies": {
    "common-tags": "1.4.0",
    "debug": "2.3.3",
    "invariant": "2.2.2",
    "keymirror": "0.1.1",
    "lodash.upperfirst": "4.3.1",
    "redux": "3.6.0",
    "redux-tcomb": "0.2.1",
    "stampit": "3.0.6",
    "tcomb": "3.2.15",
    "uid": "0.0.2",
    "warning": "github:blackdice/warning"
  },
  "devDependencies": {
    "any-promise": "1.3.0",
    "ava": "0.17.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-dev-expression": "0.2.1",
    "babel-plugin-external-helpers": "6.18.0",
    "babel-plugin-transform-flow-strip-types": "6.18.0",
    "babel-polyfill": "6.20.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-latest-minimal": "1.1.2",
    "babel-preset-stage-1": "6.16.0",
    "babel-register": "6.18.0",
    "buble": "0.14.3",
    "coveralls": "2.11.15",
    "eslint": "3.12.0",
    "eslint-config-blackdice": "^0.1.1",
    "eslint-plugin-ava": "4.0.0",
    "eslint-plugin-babel": "4.0.0",
    "fs-promise": "1.0.0",
    "ghooks": "^1.3.2",
    "nyc": "9.0.1",
    "publish-please": "2.2.0",
    "rollup": "0.37.0",
    "rollup-plugin-babel": "2.6.1",
    "rollup-plugin-commonjs": "5.0.5",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-replace": "1.1.1",
    "rollup-plugin-uglify": "1.0.1"
  },
  "optionalDependencies": {
    "remote-redux-devtools": "0.5.5"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit",
    "source": "src",
    "files": [
      "test/*.js",
      "test/providers/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/types",
      "test",
      "node_modules"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "post-merge": "yarn"
    }
  }
}
